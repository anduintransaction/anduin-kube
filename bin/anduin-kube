#!/usr/bin/env bash

if [ ! -e $HOME/.anduin-kube/lib ]; then
    echo "Please reinstall anduin-kube"
    exit 1
fi

. $HOME/.anduin-kube/lib/common.sh
for filename in `ls $HOME/.anduin-kube/lib/functions/*.sh`; do
    . $filename
done

if [ $# -lt 1 ]; then
    usage
    exit 1
fi

installIfNeeded
if [ $? -ne 0 ]; then
    exit 1
fi

ensureRootCA $HOME/.anduin-kube/lib/ca.cert.pem

case $1 in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop && start
        ;;
    force-stop)
        forceStop
        ;;
    delete)
        delete
        ;;
    version)
        version
        ;;
    setup-network)
        setupNetwork
        ;;
    healthz)
        healthz
        ;;
    cleanup)
        cleanup
        ;;
    update)
        update
        ;;
    update-iso)
        updateIso
        ;;
    fix)
        fix
        ;;
    clear-cache)
        clearCache
        ;;
    *)
        minikube $@
        ;;
esac
